{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Make All",
      "command": "make",
      "args": ["all"],
      "options": {
        "cwd": "${cwd}"
      },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "type": "shell",
      "label": "Make Clean",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${cwd}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Make .o (active file)",
      "command": "make",
      "args": ["${fileBasenameNoExtension}.o"],
      "options": {
        "cwd": "${cwd}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Make .exe (active file)",
      "command": "make",
      "args": ["${fileBasenameNoExtension}.exe"],
      "options": {
        "cwd": "${cwd}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Make Hello",
      "command": "make",
      "args": ["hello.exe"],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
    },
    {
      "type": "shell",
      "label": "g++.exe (active file)",
      "command": "g++.exe",
      "args": ["-g", "${fileBasename}", "-o", "${fileBasenameNoExtension}.exe"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "g++.exe (hello.exe)",
      "command": "g++",
      "args": [
        "-g",
        "-Wall",
        "-std=c++11",
        "-ggdb",
        "date.cpp",
        "math.cpp",
        "hello.cpp",
        "-o",
        "hello.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
