{
  // Use IntelliSense to learn about possible attributes. Hover to view
  // descriptions of existing attributes. For more information, visit:
  // https://code.visualstudio.com/Docs/editor/tasks
  //
  // Some tasks below are configured to run in the ${fileDirname}, which is the
  // folder containing the file you are currently looking at. I attempted to use
  // ${cwd} instead, which is the default directory configured for new
  // terminals, but it didn't seem to work as expected.
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Make All",
      "command": "make",
      "args": [
        "all"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Make Clean",
      "command": "make",
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Make .o (active file)",
      "command": "make",
      "args": [
        "${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Make .exe (active file)",
      "command": "make",
      "args": [
        "${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Make Hello",
      "command": "make",
      "args": [
        "hello.exe"
      ],
      "problemMatcher": [],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      // This task will only succeed if the active .cpp file includes all the
      // .cpp and .h files it needs.
      //
      // File paths generated by ${file} and other VS Code variables are
      // separated by a backslash character, which does not work in the bash
      // shell. So if the bash shell is the default, it is necessary to force
      // this task to be run in cmd or powershell. See
      // https://github.com/microsoft/vscode/issues/35593 
      "type": "shell",
      "label": "g++ .exe (active file)",
      "command": "g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/c"
          ]
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      // File paths generated by ${file} and other VS Code variables are
      // separated by a backslash character, which does not work in the bash
      // shell. So if the bash shell is the default, it is necessary to force
      // this task to be run in cmd or powershell. See
      // https://github.com/microsoft/vscode/issues/35593 
      "type": "shell",
      "label": "g++ .o (active file)",
      "command": "g++.exe",
      "args": [
        "-g",
        "${file}",
        "-c",
        "-o",
        "${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/c"
          ]
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      // This is an example of a task that builds a very specific executable
      // with a set of specific g++ flags, rather than a more generic task like
      // "make all" or something that works with the currently opened file.
      //
      // Set the "cwd" option to the folder where the program source code lives.
      "type": "shell",
      "label": "g++ hello.exe",
      "command": "g++",
      "args": [
        "-g",
        "-Wall",
        "-std=c++11",
        "-ggdb",
        "date.cpp",
        "math.cpp",
        "hello.cpp",
        "-o",
        "hello.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}